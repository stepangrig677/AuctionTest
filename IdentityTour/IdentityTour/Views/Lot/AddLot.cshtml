
@{
    ViewBag.Title = "Добавить лот";
}


<div class="container">
    <div class="row">
        <!-- Картинки-->
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-6 text-center">
                        <img src="http://lorempixel.com/220/170/" alt="">
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-6 text-center">
                        <img src="http://lorempixel.com/220/170/" alt="">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-6 text-center">
                        <img src="http://lorempixel.com/220/170/" alt="">
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-6 text-center">
                        <img src="http://lorempixel.com/220/170/" alt="">
                    </div>
                </div>
                <button class="btn btn-default">Добавить фото</button>
            </div>
        </div>

        <!-- Текстовые поля-->


        <div class="col-md-6">
            <form>
                <div class="form-group form-inline">
                    <label for="inputsm">Стартовая цена(руб.)</label>
                    <input class="form-control input-sm-l"  type="number">
                </div>
                <div class="form-group form-inline">
                    <label for="inputsm">Время начала торгов: </label>
                    <input class="form-control input-sm"  type="time">
                    <input class="form-control input-sm"  type="date">
                </div>
                <div class="form-group form-inline">
                    <label for="inputsm">Время окончания торгов: </label>
                    <input class="form-control input-sm"  type="time">
                    <input class="form-control input-sm"  type="date">
                </div>
                <div class="form-group form-inline">
                    <label for="inputsm">Название лота</label>
                    <input class="form-control input-sm-l"  type="text">
                </div>
                <div class="form-group">
                    <label for="inputlg">Описание</label>
                    <textarea class="form-control" rows="3" ></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Создать лот</button>
            </form>
        </div>
    </div>
</div>
